<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(slide) -%>">
  <span class='title'>
    <%= slide.text %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), slide_path(slide),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_slide_path(slide),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_slide_path(slide),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => slide.text),
        :method => :delete %>
  </span>
</li>
